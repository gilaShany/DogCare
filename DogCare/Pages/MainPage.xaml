<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DogCare.MainPage"
             xmlns:ic="clr-namespace:ImageCircle.Forms.Plugin.Abstractions;assembly=ImageCircle.Forms.Plugin.Abstractions"
             NavigationPage.HasNavigationBar="True">

    <AbsoluteLayout>
        <Image Source="MainPage.jpg" Aspect="AspectFill" AbsoluteLayout.LayoutBounds="0,0,1,1" AbsoluteLayout.LayoutFlags="All" />
        <StackLayout AbsoluteLayout.LayoutBounds="0,1,1,0.4" AbsoluteLayout.LayoutFlags="All">
            <ic:CircleImage x:Name="image" BorderColor="Black" BorderThickness="1" HorizontalOptions="End"/>
            <Button Text="My dog calendar" Clicked="Calendar_Clicked"/>
            <Button Text="Go on a walk" Clicked="Walk_Clicked"/>
            <Button Text="Competition" Clicked="Competition_Clicked"/>
            <Button Text="My walks" Clicked="MyWalks_Clicked"/>
        </StackLayout>
    </AbsoluteLayout>
</ContentPage>