<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DogCare.MyDogsPage"
             NavigationPage.HasNavigationBar="True"
             NavigationPage.HasBackButton="True">
    <StackLayout>
        <StackLayout Orientation="Horizontal">
            <SearchBar x:Name="searchBar" Placeholder="Search by name..." PlaceholderColor="#005ce6"
                            IsVisible="True" TextChanged="searchBar_TextChanged" WidthRequest="300" HorizontalOptions="Start"/>
            <Button Image="add.png" Clicked="Add_Clicked" BackgroundColor="White" HorizontalOptions="End"/>
        </StackLayout>
        <ListView x:Name="listView" ItemSelected="Handle_ItemSelected" ItemsSource="{Binding}" SeparatorColor="LightCyan">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal">
                            <Image Source="{Binding DogImage.Source}"/>
                            <Label Text="{Binding Dog.DogName}" TextColor="Black" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>