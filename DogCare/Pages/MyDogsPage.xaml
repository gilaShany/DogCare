<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DogCare.MyDogsPage"
             NavigationPage.HasNavigationBar="True"
             NavigationPage.HasBackButton="True">
    <StackLayout Padding="10">
        <Button Text="Add" Clicked="Add_Clicked"/>

        <ListView x:Name="listView" ItemSelected="Handle_ItemSelected" ItemsSource="{Binding}">
        <ListView.ItemTemplate>
            <DataTemplate>
                    <ImageCell Text="{Binding Dog.DogName}"  ImageSource="{Binding DogImage.Source}" TextColor="Black"  /> >
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
    </StackLayout>
</ContentPage>