<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DogCare.MyDogsPage"
             NavigationPage.HasNavigationBar="True"
             NavigationPage.HasBackButton="True">
    <StackLayout Padding="10">
        <StackLayout Orientation="Horizontal">
            <SearchBar x:Name="searchBar" Placeholder="Search by name..." PlaceholderColor="LightCyan"
                        IsVisible="True" TextChanged="searchBar_TextChanged"/>
            <Button Image="add.png" Clicked="Add_Clicked" BackgroundColor="White" HorizontalOptions="StartAndExpand"/>
        </StackLayout>
        <ListView x:Name="listView" ItemSelected="Handle_ItemSelected" ItemsSource="{Binding}"
                  IsGroupingEnabled="True"
              GroupDisplayBinding="{Binding Dog.DogName}"
                  HasUnevenRows="True"
                SeparatorVisibility="None">
            <ListView.ItemTemplate>
                <DataTemplate>
                        <ImageCell Text="{Binding Dog.DogName}"  ImageSource="{Binding DogImage.Source}" TextColor="Black" /> 
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>