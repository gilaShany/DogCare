<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DogCare.Pages.CompetitionPage">

    <ListView x:Name="listView"
              ItemsSource="{Binding}" HasUnevenRows="True"
              IsPullToRefreshEnabled="True" Refreshing="ListView_Refreshing">
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <StackLayout>
                        <StackLayout Orientation="Horizontal" Padding="5">
                            <Label Text="{Binding Owner}"/>
                            <Label Text=", Dog's name:" />
                            <Label Text="{Binding DogName}" />
                        </StackLayout>
                        <StackLayout Orientation="Horizontal" Padding="5">
                            <Label Text="Total distance: " />
                            <Label Text="{Binding Walk}"/>
                            <Label Text="m" />
                        </StackLayout>
                    </StackLayout>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
    
</ContentPage>