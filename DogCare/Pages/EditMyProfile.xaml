<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DogCare.EditMyProfile">
    <StackLayout>
        <Label Text="Name:"/>
        <Entry x:Name="ownerName"
                  Placeholder="{Binding OwnerName}" />

        <Button Text="Change Password" Clicked="ChangePassword_Clicked"/>

        <Button Text="Update"
                  Clicked="Edit_Clicked" />

    </StackLayout>
</ContentPage>