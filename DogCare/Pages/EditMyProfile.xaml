<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DogCare.EditMyProfile">
    <AbsoluteLayout>
        <BoxView Opacity="0.5" Color="Black" AbsoluteLayout.LayoutBounds="30,30,0.85,0.7" AbsoluteLayout.LayoutFlags="SizeProportional" />
        <StackLayout AbsoluteLayout.LayoutBounds="35,35,0.80,0.85" AbsoluteLayout.LayoutFlags="SizeProportional">

            <Label Text="Name:"/>
            <Entry x:Name="ownerName"
                  Placeholder="{Binding OwnerName}" />
            <Button x:Name="pickPhoto" Text="Change image"/>
            <Image x:Name="image" />
        </StackLayout>

        <StackLayout AbsoluteLayout.LayoutBounds="30,430,0.85,0.85" AbsoluteLayout.LayoutFlags="SizeProportional">
            <Button Text="Update"
                  Clicked="Edit_Clicked" />
            <ActivityIndicator x:Name="activity"
                           Color="Black" />
        </StackLayout>
    </AbsoluteLayout>
</ContentPage>