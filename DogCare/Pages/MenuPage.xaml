<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DogCare.MenuPage">
    <StackLayout>
        <StackLayout BackgroundColor="Aquamarine">
            <Label Text="Hello!"/>
        </StackLayout>
        <Label Text="Profile" BackgroundColor="Beige"/>
        <Button Text="Logout" Clicked="logout_Clicked"/>
        <Button Text="Edit profile" Clicked="EditProfile_Clicked"/>
        <Button Text="Change password" Clicked="ChangePassword_Clicked"/>
       
        <Label Text="My Dog" BackgroundColor="Beige"/>

        <Button Text="Edit my dog's profile" Clicked="EditDog_Clicked"/>
        <Button Text="My dogs" Clicked="MyDogs_Clicked"/>
        <Button Text="Add a new dog" Clicked="AddNewDog_Clicked"/>

    </StackLayout>
</ContentPage>