<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DogCare.OwnerList">
    <StackLayout>
        <Entry x:Name="ownerName"
                  Placeholder="Owner Name" />
        <Entry x:Name="userName"
                  Placeholder="Username" />
        <Entry x:Name="password" IsPassword="True"
                  Placeholder="Password" />
        <Button x:Name="takePhoto" Text="Take Photo"/>
        <Button x:Name="pickPhoto" Text="Pick Photo"/>
        <Image x:Name="image"/>
        <Button x:Name="addButton" Text="Add"
                  Clicked="CreateNewAccount_Clicked" />
        <ActivityIndicator x:Name="activity"
                           Color="Black" />
    </StackLayout>
</ContentPage>