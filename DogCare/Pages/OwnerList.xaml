<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DogCare.OwnerList">

    <AbsoluteLayout>
        <BoxView Opacity = "0.5" Color="Black" AbsoluteLayout.LayoutBounds="0.5,0.15,0.85,0.6" AbsoluteLayout.LayoutFlags="All" />

        <StackLayout AbsoluteLayout.LayoutBounds="35,35,0.80,0.85" AbsoluteLayout.LayoutFlags="SizeProportional">
            <Entry x:Name="ownerName"
                  Placeholder="Owner Name" PlaceholderColor="White"/>
            <Entry x:Name="userName"
                  Placeholder="Username" PlaceholderColor="White"/>
            <Entry x:Name="password" IsPassword="True"
                  Placeholder="Password" PlaceholderColor="White" />
            <Button x:Name="pickPhoto" Text="Pick Photo"/>
            <Image x:Name="image"/>
        </StackLayout>
        <StackLayout AbsoluteLayout.LayoutBounds="30,320,0.85,0.85" AbsoluteLayout.LayoutFlags="SizeProportional">
            <Button x:Name="addButton" Text="Add"
                  Clicked="CreateNewAccount_Clicked" />
        <ActivityIndicator x:Name="activity"
                           Color="Black" />
    </StackLayout>
    </AbsoluteLayout>
</ContentPage>